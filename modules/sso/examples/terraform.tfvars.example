# Example terraform.tfvars file
# Copy this file and update the values for your environment

project = "my-project"

# Uncomment and set if you have an existing organization
# aws_organization_id = "o-example123456"

# Account parameters - update with your actual account details
aws_account_parameters = {
  "111111111111" = {
    email     = "management@example.com"
    lifecycle = "prod"
    name      = "Management"
    ou        = "Security"
    tags      = { Environment = "Production" }
  }
  "222222222222" = {
    email     = "network@example.com"
    lifecycle = "prod"
    name      = "Hub and Spoke"
    ou        = "Infrastructure_Prod"
    tags      = { Environment = "Production" }
  }
  "333333333333" = {
    email     = "logging@example.com"
    lifecycle = "prod"
    name      = "Log Archive"
    ou        = "Security"
    tags      = { Environment = "Production" }
  }
  "444444444444" = {
    email     = "audit@example.com"
    lifecycle = "prod"
    name      = "Audit"
    ou        = "Security"
    tags      = { Environment = "Production" }
  }
}

global_tags = {
  Project     = "my-project"
  Owner       = "devops-team"
  Environment = "production"
}

# SSO Configuration
enable_sso_management     = true
auto_detect_control_tower = true

