# Example Terraform variable values for AWS Organizations Module
# Copy this file to terraform.tfvars and customize with your organization's values

# Basic Configuration
aws_region = "us-gov-west-1"
project    = "my-organization"

# Global tags applied to all resources
global_tags = {
  Project     = "AWS Organizations Management"
  Owner       = "platform-team@organization.com"
  Repository  = "https://github.com/organization/terraform-aws-cspm"
  Terraform   = "true"
  Environment = "production"
  CostCenter  = "IT-Infrastructure"
}

# Organizational Units following AWS SRA structure
organizational_units = {
  # Security OU - Contains security and compliance accounts
  Security = {
    lifecycle = "prod"
    tags = {
      Function = "Security"
      Purpose  = "Security and compliance accounts"
    }
  }
  
  # Infrastructure Production OU 
  Infrastructure_Prod = {
    lifecycle = "prod"
    tags = {
      Function = "Infrastructure"
      Purpose  = "Production infrastructure services"
    }
  }
  
  # Infrastructure Test OU
  Infrastructure_Test = {
    lifecycle = "nonprod"
    tags = {
      Function = "Infrastructure"
      Purpose  = "Development and testing infrastructure"
    }
  }
  
  # Workloads Production OU
  Workloads_Prod = {
    lifecycle = "prod"
    tags = {
      Function = "Workloads"
      Purpose  = "Production application workloads"
    }
  }
  
  # Workloads Test OU
  Workloads_Test = {
    lifecycle = "nonprod"
    tags = {
      Function = "Workloads"
      Purpose  = "Development and testing workloads"
    }
  }
  
  # Sandbox OU
  Sandbox = {
    lifecycle = "nonprod"
    tags = {
      Function = "Sandbox"
      Purpose  = "Experimental and POC accounts"
    }
  }
  
  # Policy Staging OU
  Policy_Staging = {
    lifecycle = "nonprod"
    tags = {
      Function = "Policy"
      Purpose  = "Organization policy testing"
    }
  }
  
  # Suspended OU
  Suspended = {
    lifecycle = "nonprod"
    tags = {
      Function = "Suspended"
      Purpose  = "Suspended or decommissioned accounts"
    }
  }
}

